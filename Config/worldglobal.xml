<configs>
	<append xpath="/worldglobal">
		<microsplat-shader map-only="*">
			<!-- you may define your own shader if wanted, but we don't really recommend to mess with this directly -->
			<property name="Shader" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/OcbMicroSplatUber"/>
			<property name="ShaderTess" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/OcbMicroSplatUberTess"/>
			<!-- metal means the mac graphics api, which requires a platform specific bundle (can't be bundles into one unfortunately) -->
			<property name="MetalShader" value="#@modfolder:Resources/OcbMicroSplat.metal.unity3d?assets/OcbMicroSplat/OcbMicroSplatUber"/>
			<property name="MetalShaderTess" value="#@modfolder:Resources/OcbMicroSplat.metal.unity3d?assets/OcbMicroSplat/OcbMicroSplatUberTess"/>

			<property name="NoisePerlin" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/microsplat_def_perlin"/>
			<property name="NoiseDetail" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/microsplat_def_detail_noise"/>
			<property name="NoiseDistant" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/microsplat_def_detail_noise"/>
			<property name="NoiseNormal1" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/microsplat_def_detail_normal_01"/>
			<property name="NoiseNormal2" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/microsplat_def_detail_normal_02"/>
			<property name="NoiseNormal3" value="#@modfolder:Resources/OcbMicroSplat.unity3d?assets/OcbMicroSplat/microsplat_def_detail_normal_03"/>

			<property name="NoiseHeightData" value="0.5, 0.275"/>
			<property name="WorldHeightRange" value="0, 500"/>

			<property name="DistanceResampleAlbedoStrength" value="0.85"/>
			<property name="DistanceResampleNormalStrength" value="0.65"/>
			<property name="DistanceResampleMaterialStrength" value="0.35"/>

			<property name="NoiseNormal1Params" value="0.6, 0.225"/>
			<property name="NoiseNormal2Params" value="0.325, 0.175"/>
			<property name="NoiseNormal3Params" value="0.135, 0.125"/>

			<!-- Governed via hardcoded settings to switch in the UI -->
			<!-- tessallation, mipBias, distance fade min, max -->
			<!-- <property name="TessParams1" value="128, 3, 15, 30"/> -->
			<!-- displacement, shaping, upbias, (edge/unused) -->
			<property name="TessParams2" value="1, 0.85, 0.75, 0"/>

			<property name="TessPhongBias" value="0.25"/>
			<property name="RecalcNormals" value="0.075"/>

			<property name="ResampleDistanceParams" value="0.25, 0.5, 100"/>

			<property name="DetailNoiseScaleStrengthFade" value="8, 0.4, 30"/>
			<property name="DistanceNoiseScaleStrengthFade" value="2, 0.5, 50, 100"/>

			<property name="TriplanarContrast" value="8"/>
			<property name="TriplanarUVScale" value="1, 1, 0, 0"/>

			<!-- Below are the default shader settings (looks weird)

			<property name="NoiseHeightData" value="1.0, 0.15"/>
			<property name="WorldHeightRange" value="0.0, 250"/>

			<property name="NoiseNormal1Params" value="10.0, 0.5"/>
			<property name="NoiseNormal2Params" value="80.0, 1.0"/>
			<property name="NoiseNormal3Params" value="8.0, 0.5"/>

			<property name="DistanceResampleAlbedoStrength" value="1.0"/>
			<property name="DistanceResampleNormalStrength" value="1.0"/>
			<property name="DistanceResampleMaterialStrength" value="0.35"/>

			<property name="ResampleDistanceParams" value="0.08, 50.0, 100.0"/>

			<property name="DetailNoiseScaleStrengthFade" value="4.0, 0.5, 5.0"/>
			<property name="DistanceNoiseScaleStrengthFade" value="100, 2, 10, 50"/>

			<property name="TriplanarContrast" value="8"/>
			<property name="TriplanarUVScale" value="1, 1, 0, 0"/>

			-->
		</microsplat-shader>

		<!-- snow ground - used by biome only -->
		<microsplat-texture name="microsplat0">
			<property name="BlendWeight" value="1"/>
			<property name="CurveWeight" value="0.5"/>
			<!-- render only biome if undamaged -->
			<property name="TopSoilVoxel" value="0,1"/>
			<property name="TopSoilBiome" value="1,0"/>
			<property name="TessDisplacementOffset" value="-0.25"/>
			<property name="TessDisplacementStrength" value="0.5"/>
			<property name="TessDisplacementUpBias" value="0.5"/>
		</microsplat-texture>

